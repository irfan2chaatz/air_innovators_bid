datasource db {
  provider = "mongodb"
  url      = env("DEV_MONGO_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER   // Normal user role
  ADMIN  // Admin role
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @db.String   // Required field
  username  String   @unique @db.String   // Required and unique field
  email     String   @unique @db.String   // Required and unique field
  password  String   @db.String   // Required field
  role      UserRole @default(USER) // User role, default to USER
  products  Product[]
  bids      Bid[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  startingBid Float
  bids        Bid[]
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  endAt       DateTime
  status      String   @default("open")
}

model Bid {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}
